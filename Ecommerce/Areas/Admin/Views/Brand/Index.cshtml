
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Brand List</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert">
            <i class="bi bi-plus-square-fill">

            </i>Add new Brand
        </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="brandTable" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/brand.js"></script>
}

