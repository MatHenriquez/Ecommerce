@model Ecommerce.Models.Storage

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string title = "Create Storage";
}

<form method="post">
    <div style="padding-left: 15%; padding-right: 15% padding-bottom: inherit.4rem;">
        <div class="row border-0">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger">
            </div>
                @if(Model.Id != 0)
                {
                    title = "Edit Storage";
                    <input type="hidden" asp-for="Id"/>
                }

                <div class="col-12 border-bottom p-0">
                    <h2 class="text-primary">@title</h2>
                </div>

                <div class="row mb-2 mt-2">
                    <div class="form-group col-md-6">
                        <label>Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Storage name..."/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-2 mt-2">
                    <div class="form-group col-md-6">
                        <label>Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Storage description..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-2 mt-2">
                    <div class="form-group col-md-6">
                        <label>Status</label>
                        <select asp-for="Status" class="form-control">
                            <option value=true>Active</option>
                            <option value=false>Inactive</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <br />

                <div>
                    @if(Model.Id != 0)
                    {
                        <partial name="_UpdateAndReturnButtons" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndReturnButtons" />
                    }
                </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

